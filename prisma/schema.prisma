generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String    @unique
  emailVerified  DateTime?
  password       String?
  image          String?
  facebookAdToken String?  @db.Text
  facebookName   String?   // Name from connected Facebook account
  
  // Google Sheets Integration
  googleRefreshToken String? @db.Text
  googleEmail        String?
  googleName         String?

  role           String    @default("host") // host, admin, staff - new users are host by default
  
  // User Settings
  language       String    @default("en")
  timezone       String    @default("auto")
  currency       String    @default("usd")
  theme          String    @default("light")
  primaryColor   String    @default("sky")
  compactMode    Boolean   @default(false)
  showAnimations Boolean   @default(true)
  emailNotifications Boolean @default(true)
  campaignAlerts    Boolean @default(true)
  weeklyReports     Boolean @default(false)
  budgetAlerts      Boolean @default(true)
  twoFactorEnabled  Boolean @default(false)
  
  // AdBox Notification Settings
  adboxSoundEnabled       Boolean @default(true)
  adboxBrowserNotification Boolean @default(true)
  adboxInAppNotification  Boolean @default(true)
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  accounts       Account[]
  sessions       Session[]
  adAccounts     AdAccount[]
  pageSettings   PageSettings[]
  
  // Team Relations
  ownedTeams     Team[]    @relation("TeamOwner")
  teamMemberships TeamMember[]
  assignedConversations Conversation[] @relation("AssignedTo")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AdAccount {
  id        String   @id
  userId    String
  name      String
  currency  String?
  status    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
}

// ===== AdBox Models =====

model Conversation {
  id                     String    @id @default(cuid())
  facebookConversationId String?   // Facebook conversation ID (t_xxxx)
  pageId                 String
  participantId          String
  participantName        String?
  snippet                String?   @db.Text
  updatedTime            DateTime?
  unreadCount            Int       @default(0)
  adId                   String?
  facebookLink           String?
  viewedBy               String?   @db.Text  // JSON: [{id, name, email, viewedAt}]
  lastViewedBy           String?   // Last viewer's name
  lastViewedAt           DateTime? // Last viewed timestamp
  
  // Assignment
  assignedToId           String?   // Staff assigned to this conversation
  assignedTo             User?     @relation("AssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)
  assignedAt             DateTime? // When it was assigned
  
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  messages               Message[]

  @@unique([pageId, participantId])
  @@index([pageId])
  @@index([participantId])
  @@index([adId])
  @@index([facebookConversationId])
  @@index([assignedToId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  from           String   // PSID of sender
  text           String?  @db.Text
  attachments    String?  @db.LongText  // JSON array
  stickerUrl     String?
  isFromPage     Boolean  @default(false)
  repliedById    String?  // User ID who sent this message (for page messages)
  repliedByName  String?  // Name of user who sent this message
  createdTime    DateTime
  createdAt      DateTime @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@index([createdTime])
  @@index([repliedById])
}

model PageSettings {
  id                    String   @id @default(cuid())
  pageId                String   @unique
  pageName              String?
  pageAccessToken       String?  @db.Text
  rotationEnabled       Boolean  @default(false)
  rotationInterval      Int      @default(5)
  rotationUserIds       String?  @db.Text  // JSON array
  currentRotationIndex  Int      @default(0)
  lastRotationTime      DateTime?
  userId                String
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
}

// Team for managing staff members
model Team {
  id                String   @id @default(cuid())
  name              String
  ownerId           String
  owner             User     @relation("TeamOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  // Auto-assign settings
  autoAssignEnabled Boolean  @default(false)
  assignmentMode    String   @default("roundrobin") // roundrobin, leastbusy
  lastAssignedIndex Int      @default(0) // For round-robin
  
  members           TeamMember[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([ownerId])
}

model TeamMember {
  id        String   @id @default(cuid())
  teamId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isActive  Boolean  @default(true) // Can receive new assignments
  createdAt DateTime @default(now())
  
  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

// Activity Log for tracking user actions
model ActivityLog {
  id          String   @id @default(cuid())
  userId      String
  userEmail   String
  userName    String?
  action      String   // login, logout, send_message, create_team, add_member, etc.
  details     String?  @db.Text // JSON details
  ipAddress   String?
  userAgent   String?  @db.Text
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([action])
}

// Google Sheets Export Configuration
model ExportConfig {
  id                String   @id @default(cuid())
  userId            String
  name              String   // Config name for identification
  spreadsheetUrl    String   @db.Text // Google Sheets URL
  spreadsheetId     String   // Extracted from URL
  sheetName         String   // Sheet/Tab name
  dataType          String   // accounts, campaigns, adsets, ads
  accountIds        String?  @db.Text // JSON array of selected ad account IDs
  columnMapping     String   @db.Text // JSON mapping of data columns to sheet columns
  
  // Auto Export Settings
  autoExportEnabled Boolean  @default(false)
  exportFrequency   String?  // daily, hourly
  exportHour        Int?     // Hour of day (0-23) for daily export
  exportInterval    Int?     // Hours between exports for hourly
  appendMode        Boolean  @default(true) // true = append new rows, false = replace all
  includeDate       Boolean  @default(true) // Add date column
  
  // Timezone Support
  adAccountTimezone    String?  // e.g., "Asia/Bangkok"
  useAdAccountTimezone Boolean  @default(false)
  exportMinute         Int?     @default(0) // Minute of hour (0-59)
  
  // Status tracking
  lastExportAt      DateTime?
  lastExportStatus  String?  // success, failed
  lastExportError   String?  @db.Text
  lastExportRows    Int?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([userId])
  @@index([autoExportEnabled])
}
